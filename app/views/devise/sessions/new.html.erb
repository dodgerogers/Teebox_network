<% meta_title("Log in") %>

<html class="mobile-scroll">
	<body class="sandy-hills-xl mobile-scroll">
		<div class="row">
			<div class="span2"></div>
				<div class="span8">
					<div class="hero-unit blue-transparent">
					<h1>Login</h1>

					<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

				  	<div class="registration">
						<%= f.label :username, raw("<i class='icon-user'></i> Username") %>
						<%= f.text_field :username, autocomplete: "on" %>
					</div>

					<div class="registration">
						<%= f.label :password, raw("<i class='icon-lock'></i> Password") %>
						<%= f.password_field :password, autocomplete: "on" %>
					</div>

				  	<% if devise_mapping.rememberable? %>
				    <div class="registration">
						<%= f.check_box :remember_me %>
						<%= f.label :remember_me, class: "remember_me" %>
					</div>
				  	<% end %>
				  	<div class="registration">
						<%= f.submit "Sign in", class: "default submit" %>
					</div>
				  	<% end %>

			<%= render "devise/shared/links" %>
			</div>
			</div>
		</div>
	</body>
</html>