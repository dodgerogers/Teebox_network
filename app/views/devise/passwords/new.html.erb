<div class="center hero-unit sky">
<h2 class="welcome-banner">Forgot your password?</h2><br><br>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email, raw("<i class='icon-envelope'></i> Email") %>
  <%= f.email_field :email, class: "input-xxlarge" %></div>

  <div><%= f.submit "Send reset instructions", class: "default submit" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>