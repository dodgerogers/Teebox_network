<%= content_for :head do %>
<title>Sign Up</title>
<% end %>

<body class="sebonak-xl">
	<div class="row">
		<div class="span2"></div>
			<div class="span8"> 
				<div class="center hero-unit blue-transparent">
				<h1 class="welcome-banner">Create an Account</h1><br><br>

					<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
					  <%= devise_error_messages! %>

					  <div><%= f.label :email, raw("<i class='icon-envelope'></i> Email") %>
					  <%= f.email_field :email, placeholder: "Email" %></div><br>

					  <div><%= f.label :username, raw("<i class='icon-user'></i> Username") %>
					  <%= f.text_field :username, placeholder: "Username" %></div><br>

					  <div><%= f.label :password, raw("<i class='icon-lock'></i> Password") %>
					  <%= f.password_field :password, placeholder: "Password" %></div><br>

					  <div><%= f.label :password_confirmation, raw("<i class='icon-lock'></i> Password Confirmation") %>
					  <%= f.password_field :password_confirmation, placeholder: "Password Confirmation" %></div><br>

					  <div><%= f.submit "Sign up", class: "default submit" %></div>
					<% end %>

					<%= render "devise/shared/links" %>
			</div>
			</div>
		<div class="span2"></div>
	</div>
</body>