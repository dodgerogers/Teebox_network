<% if @answer.errors.any? %>
  	alert("Failed to edit answer: <%= j @answer.errors.full_messages.join(', ').html_safe %>");
<% else %>
  	$('#answer_<%="#{@answer.id}"%>').replaceWith('<%= j render(@answer) %>');
	$('#answer_<%="#{@answer.id}"%>').effect('highlight', {color: '#f7f7f7'}, 1000);
	$('.new_comment').hide();
<% end %>