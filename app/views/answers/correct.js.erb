<% if @answer.errors.any? %>
  	alert("Failed to submit: <%= j @answer.errors.full_messages.join(', ').html_safe %>");
<% else %>
	var answer = $('.correct_<%= @answer.id %>')
	<% if @answer.correct == true %>
		answer.css('color', '#4fc392');
	<% else %>
		answer.css('color', '#ccc');
	<% end %>
<% end %>