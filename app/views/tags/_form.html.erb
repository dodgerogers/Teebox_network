<%= link_to "Create a new Tag", "#", id: "toggle_tag_form", class: "default submit" %><br><br>

<div class="well" id="tag_form">
<%= form_for @tag do |f| %>

<% if @tag.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@tag.errors.count, "error") %> prohibited this post from being saved:</h2>

	<ul>
		<% @tag.errors.full_messages.each do |msg| %>
  		<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
	<% end %>
	
	<%= f.hidden_field :updated_by, value: current_user.username %>
	
	<div class="field">
		<%= f.text_field :name, placeholder: "Enter name" %>
