<% if @vote.new_record? %>
	alert("<%= j @vote.errors.full_messages.join(', ').html_safe %>");
<% else %>
	var votes = "<%= pluralize(@vote.votable.votes_count, 'vote') %>";
	$('#<%= "#{@vote.votable.class}_#{@vote.votable.id}" %>').html(votes);
	$('.user_<%= @vote.votable.user.id %>').text("<%= @vote.point.user.reputation %>");
<% end %>