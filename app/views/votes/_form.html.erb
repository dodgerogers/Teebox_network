<div class="vote-box">
	<i class="icon-thumbs-up-alt"></i>
	<span id="<%= "#{demodularize(object)}_#{object.id}" %>">
		<%= pluralize(object.votes_count, "vote") %>
	</span>
</div>
<div id="arrows">
	<%= link_to raw("<i class='icon-plus-sign-alt green'></i>"), vote_path.call(object, value: 1), id: "upvote", remote: true,  method: "post", title: "Upvote" %>
	<%= link_to raw("<i class='icon-minus-sign-alt red'></i>") , vote_path.call(object, value: -1), id: "downvote", remote: true, method: "post", title: "Downvote" %>
</div>