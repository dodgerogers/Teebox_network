<li class="nav-header" id="activities">Notifications</li>
<% activities.each do |activity| %>
	<% cache ["user_#{current_user.id}", activity] do %>
		<div id="notification" class="<%= activity.read == false ? 'unread' : '' %>">
	 			<%= render_activity activity %>
		</div>
	<% end %>
<% end %>
<% unless current_page?(activities_path) %>
	<li><%= link_to "View All", activities_path  %></li>
<% end %>
