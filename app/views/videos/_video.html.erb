<div id='video_<%="#{video.id}" %>' class="videos">
		<%= image_tag("spinner.gif", class: "loading loading_#{video.id}") %>
		
  	<%= video.screenshot.present? ? (link_to image_tag(video.screenshot), video) : (link_to image_tag("video_screen.jpg"), video) %>
		
	<h4><%= link_to File.basename(video.file).titleize, video %></h4>
	 	<%= link_to "Delete", video_path(video), method: :delete, 
												 remote: true, 
												 class: "default submit pull-right", 
												 id: "delete-video_#{video.id}",
												 onclick: "$('.loading_#{video.id}').show();" %>  
	 	Uploaded <%= time_ago_in_words(video.created_at)  %> ago
</div>