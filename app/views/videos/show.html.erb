
<br><%= raw sublime_video(@video.file, @video.id) %><br>

<h2><%= File.basename(@video.file).titleize  %></h2>
	
<div class="form-area">	
	<div class="profile-info">
	<%= link_to image_tag(avatar_url(@video.user)), @video.user %>
	<small><%= link_to @video.user.username.titleize, user_path(@video.user) %><br>
	Posted <%= time_ago_in_words(@video.created_at) %> ago</small>
	</div>
	
	
	<div class="pull-right">
		<%= link_to "my videos", videos_path, class: "btn" %>
	<%= link_to "delete", video_path(@video), class: "btn", method: :delete if @video.user == current_user %>
	</div>
</div>	

	