<% if @video.new_record? %>
	alert("Failed to upload Video: <%= j @video.errors.full_messages.join(', ').html_safe %>");
<% else %>
	var video = $("<%= j render(@video) %>").hide();
	$('#videos').prepend(video);
	video.fadeIn(1000).effect('highlight', {color: '#f7f7f7'}, 1000);
	$(".video-upload-info").html("").append("<b>Video Uploaded <i class='icon-ok-sign'></i></b><br>").fadeIn();
	function hideModal() {
	    $("#failed").modal('hide');
	}
	window.setTimeout(function() { hideModal(); },1500);
$(".progress").hide(function() {
  return $(".bar").css("width", 0);
});
<% end %>

