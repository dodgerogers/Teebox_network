<div id="playlist1" class="sv_playlist">
	<% videos.each do |vid| %>
		<div class="video_wrap">
			<video id="video<%= vid.id %>" poster="" width="748" height="374" preload="none" data-autoresize="fit">
				<source src="<%= vid.file %>"/>
			</video>		
		</div>
	<% end %>
	<ul class="thumbs">	
		<% unless videos.length <= 1 %>
			<% videos.each do |vid| %>
				<li id="thumbnail_video<%= vid.id %>">
					<a href="#">
						<%= image_tag display_xl_screenshot(vid) %>
						<span class="play" />
					</a>
				</li>
			<% end %>
		<% end %>	
	</ul>
</div>
