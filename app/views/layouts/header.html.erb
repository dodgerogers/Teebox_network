<div class="navbar">
  <div class="navbar-inner">
	<div class="container">
			<%= link_to "Teebox", root_path, class: "brand" %>
			
		<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
		   <span class="icon-bar"></span>
		   <span class="icon-bar"></span>
		   <span class="icon-bar"></span>
		 </a>
		
		<div class="nav-collapse collapse">
    	<ul class="nav pull-right">

			<form class="navbar-form pull-left">
			  		<%= form_tag questions_path, method: "get", class: "form-control" do %>
						<%= text_field_tag :search, params[:search], placeholder: "Search" %>
					<% end %>
			</form>
		<% if user_signed_in? %>
		<li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-list large"></i></a>
			<ul class="dropdown-menu span4">
				<%= render partial: "activities/index", locals: { activities: notifications } %>
			</ul>
		</li>
			<li><%= link_to image_tag(avatar_url(current_user, 30)), current_user, id: "gravatar" %></li>
      		<li><%= link_to number_to_human(current_user.reputation), current_user, id: "current-user-rep" %></li>
			<li><%= link_to current_user.username.titleize, current_user, id: "current-user" %></li>
			<li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-cog large"></i></a>
			<ul class="dropdown-menu">
				<li class="nav-header">My Account</li>
				<li class="divider"></li>
				<li><%= link_to raw("<i class='icon-cog'></i> Edit Profile"), edit_user_registration_path %></li>
				<li><%= link_to raw("<i class='icon-off'></i> Logout"), destroy_user_session_path, method: :delete %></li>
			</ul></li>
		<% else %>
		 	<li><%= link_to "Sign up", new_user_registration_path %></li>
			<li><%= link_to "Login", new_user_session_path %></li>
		<% end %>
		</div>
       </ul>
	</div>
  </div>
</div>