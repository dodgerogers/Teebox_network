<!DOCTYPE html>
<HTML lang="en">
	<head>
		<title><%= meta_title %></title>
		<meta name="description" content="<%= meta_description %>">
		<meta name="keywords" content="<%= meta_keywords %>">
		<%= favicon_link_tag "/favicon.ico" %>
		<%= favicon_link_tag 'teebox-app-icon.png', rel: 'apple-touch-icon', type: 'image/png' %>
	  	<%= stylesheet_link_tag    "application", media: "all" %>
		<%= javascript_include_tag "application", media: 'all' %>
		<%= csrf_meta_tags %>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta property="og:image" content="<%= asset_path('teebox-app-icon.png') %>" />
		<%= yield :head %>
		<!--<meta name="apple-mobile-web-app-capable" content="yes">-->
	</head>
	<body>
		<div id="wrap">
			<%= render template: "layouts/header" %>			
			<div class="container" id="margin-bottom">
				<%= render template: "layouts/enable_javascript" %>
				<% flash.each do |name, msg| %>
				 	<div class="alert alert-<%= name == :notice ? "success" : "error" %> fade in">
					 	<a class="close" data-dismiss="alert">&#215;</a>
					   	<%= content_tag :div, msg, :id => "flash" if msg.is_a?(String) %>
					</div>
	    		<% end %>
				<%= yield  %>
			</div>
			<div id="push"></div>
		</div>
		<%= render template: 'layouts/footer' %>
	</body>
</html>
