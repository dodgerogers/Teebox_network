<h2>Questions</h2> 
<%= link_to "Ask Question", new_question_path, class: "default submit" if current_user == @user %><br><br>

	<table class="table table-hover">
		<tr class="titles">
			<td>Answers</td>
			<td>Points</td>
			<td>Question</td>
		</tr>
		<% for question in questions %>
	    <tr>
				<td>
					<div id="<%= question.correct == true ? 'correct-answer' : 'no-correct-answer' %>">
						<%= question.answers_count %>
					</div>
				</td>
				<td>
					<div id="<%= question.points > 0 ? 'plus-points' : 'no-points' %>">
						<%= question.points > 0 ? "+#{question.points}" : question.points %>
					</div>
				</td>
	      <td><%= link_to question.title.titleize, question %></td>
	    </tr>
	<% end %>
	</table>
