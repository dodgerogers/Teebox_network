<div class="center hero-unit sebonak">
	<div class="row">
		<div class="span4" id="user-banner">
			<center>
			<%= link_to image_tag(avatar_url(@decorator, 35)), @decorator, class: "inline-block margin-b-5 " %>
			<h2 class="welcome-banner"><%= @decorator.username %></h2>
			<br>
			<%= @decorator.my_videos %>
			<%= link_to "Ask Question", new_question_path, class: "default submit" if current_user == @user %>
			</center>
		</div>
	<div class="span2">
		<ul class="ch-grid">
			<li>
	        <div class="ch-item ch-img-1">
	            <div class="ch-info">
	                <h3>Teebox Score</h3>
	            </div>
				<h1><%= number_to_human(decorator.reputation) %></h1>
	        </div>
	    	</li>
		</ul>
	</div>
	<div class="span2">
		<ul class="ch-grid">
			<li>
	        <div class="ch-item ch-img-1">
	            <div class="ch-info">
	               <h3>Teebox<br> Rank</h3>
	            </div>
				<h1>#<%= number_to_human(rand(1..20000)) %></h1>
	        </div>
	    	</li>
		</ul>
	</div>
	<div class="span2">
		<ul class="ch-grid">
			<li>
	        <div class="ch-item ch-img-1">
	            <div class="ch-info">
	               <h3>Another stat</h3>
	            </div>
				<h1><%= number_to_human(rand(1..20000)) %></h1>
	        </div>
	    	</li>
		</ul>
	</div>
</div>
</div>	