<table class="table table-borderless">
	<tr class="grey">
		<td>
			<a href="#" data-toggle="tooltip" id='question-correct' title="Number of answers. Green if question has an accepted answer.">
				<i class="icon-ok-sign"></i>
			</a>
		</td>
		<td>
			<a href="#" data-toggle="tooltip" id='question-text' title="Question content">
				<i class="icon-align-justify"></i>
			</a>
		</td>
	</tr>
		<% questions.each do |question| %>
	    <tr>
			<td>
				<div id="<%= question.correct == true ? 'correct-answer' : 'no-correct-answer' %>">
					<%= question.answers_count %>
				</div>
			</td>
	      	<td>
				<%= link_to question.title.titleize, question %>
			</td>
	    </tr>
	<% end %>
</table>