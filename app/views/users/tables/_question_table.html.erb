<table class="table table-borderless">
	<tr class="grey">
		<td>
			<a href="#" data-toggle="tooltip" id='question-correct' title="#Answers. Green if answer has been accepted.">
				<i class="icon-ok-sign"></i>
			</a>
		</td>
		<td>
			<a href="#" data-toggle="tooltip" id='question-text' title="The Content">
				<i class="icon-align-justify"></i>
			</a>
		</td>
	</tr>
		<% questions.each do |question| %>
	    <tr>
			<td>
				<div id="<%= question.correct == true ? 'correct-answer' : 'no-correct-answer' %>">
					<%= question.answers_count %>
				</div>
			</td>
	      	<td class="left">
				<%= link_to raw("<b>#{question.title.titleize}:</b><br>#{truncate(question.body, length: 120)}"), question %>
			</td>
	    </tr>
	<% end %>
</table>