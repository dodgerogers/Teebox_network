<h3>Comments</h3>

	<table class="table table-hover">
		<tr class="titles">
			<td>Points</td>
			<td>Comment</td>
		</tr>
		<% for comment in comments %>	
	    <tr>
				<td>
					<% votes = comment.votes.sum("points") %>
					<div id="<%= votes > 0 ? 'plus-points' : 'no-points' %>">
						<%= votes > 0 ? "+#{votes}" : votes %>
					</div>
				</td>
	      <td><%= link_to truncate(comment.content, length: 80), comment.commentable unless comments.empty? %></td>
	    </tr>
	<% end %>
	</table>