<h1>Profile</h1><br>

<div class="profile-info">
<%= link_to image_tag(avatar_url(@user)), @user %>

<%= @user.email %><br>
<%= @user.username %><br><br>

<% if current_user == @user %>
<%= link_to "Change your profile picture", "http://grvatar.com", target: :blank %>
<% end %>

<hr></div>
<br><br>

<h3>Questions</h3>
<%= link_to "Ask Question", new_question_path, class: "btn" %><br><br>
	<table class="table table-hover">
		<% for question in @questions %>	
	    <tr>
				<td>(No. of Answers) </td>
	      <td><%= link_to question.title.titleize, question %></td>
	    </tr>
	<% end %>
	</table>
	<br>
	<h2>Videos</h2><hr>
	<%= link_to "Upload Video", videos_path, class: "btn" %><br><br>
	<div id="videos">
	<%= render @videos %>
	</div>


