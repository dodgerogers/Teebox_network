<h1>Profile</h1><br>

<div class="profile-info">
<%= link_to image_tag(avatar_url(@decorator, 75)), @decorator %>
<%= @decorator.email %><br>
<%= @decorator.username %><br>
Handicap: <%= @decorator.handicap  %><br>
<%= @decorator.change_picture %>
<hr>
<h1>Teebox Score: <%= @decorator.reputation  %></h1>

</div>

<div class="profile-links">
		<%= @decorator.link_helper("questions", questions_index_path(@decorator), @decorator.questions) %>
	
		<%= @decorator.link_helper("answers", answers_index_path(@decorator), @decorator.answers) %>
	
		<%= @decorator.link_helper("comments", comments_index_path(@decorator), @decorator.comments) %>
		
		<%= @decorator.my_videos %>
</div>
		
	

