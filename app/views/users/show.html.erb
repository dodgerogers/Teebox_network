<%= render partial: "users/stats", locals: {decorator: @decorator}%>

<div class="row">
<% if @decorator.questions.any? %>	
  <div class="span6">
		<legend><%= link_to "View all Questions", questions_index_path(@user) %></legend>
		<%= render partial: "users/tables/question_table", locals: {questions: @decorator.questions.limit(4)} %>
  </div>
<% end %>
	
<% if @decorator.answers.any? %>	
  <div class="span6">
		<legend><%= link_to "View all Answers", answers_index_path(@user) %></legend>
		<%= render partial: "users/tables/answer_table", locals: {answers: @decorator.answers.limit(4)} %>
  </div>
<% end %>
</div>

<div class="row">
<% if @decorator.comments.any? %>
  <div class="span6">
		<legend><%= link_to "View all Comments", comments_index_path(@user) %></legend>
		<%= render partial: "users/tables/comment_table", locals: {comments: @decorator.comments.limit(4)} %>
  </div>
<% end %>
</div>		
	

