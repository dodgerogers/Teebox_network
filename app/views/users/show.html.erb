<h1>Profile</h1><br>

<div class="profile-info">
<%= link_to image_tag(avatar_url(@user)), @user %><br><br>

<%= @user.email %><br>
<%= @user.username %><br>
Rep: <%= @user.reputation %><br><br>

<% if current_user == @user %>
<%= link_to "Change your profile picture", "http://grvatar.com", target: :blank %>
<% end %>

<hr></div>
<br><br>

<h3>Questions</h3>
<%= link_to "Ask Question", new_question_path, class: "btn" %><br><br>
	<table class="table table-hover">
		<% for question in @questions %>	
	    <tr>
				<td><%= question.votes_count %></td>
				<td><div id="q-answers-count" class='<%= question.answers_count > 0 ? 'has-answers' : 'no-answers' %>'>
				<%= question.answers_count %></div></td>
	      <td><%= link_to question.title.titleize, question %></td>
	    </tr>
	<% end %>
	</table>
	<br>
	<%= link_to "My Videos", videos_path, class: "btn" %>
	

