<h1>Profile</h1><br>

<div class="profile-info">
<%= link_to image_tag(avatar_url(@user)), @user %><br>

<h1><%= @user.reputation %></h1>
<%= @user.email %><br>
<%= @user.username %><br><br>

<% if current_user == @user %>
<%= link_to "Change your profile picture", "http://grvatar.com", target: :blank %>
<% end %>

<hr></div>
<br><br>

<h3>Questions</h3>
<%= link_to "Ask Question", new_question_path, class: "btn" %><br><br>
	<table class="table table-hover">
		<% for question in @questions %>	
	    <tr>
				<td><%= question.votes_count %></td>
	      <td><%= link_to question.title.titleize, question %></td>
	    </tr>
	<% end %>
	</table>
	<br>
	<%= link_to "My Videos", videos_path, class: "btn" %>
	

