<% meta_title("#{@user.username} comments") %>

<h2>Comments</h2>
<%= raw "<p>No comments yet</p>" unless @comments.any? %>

<table class="table">
	<% @comments.each do |comment| %>	
	    <tr>
	      <td class="left">
			<%= link_to comment do %>
				<%= strip_links_and_trim(comment.content, 120) %><br>
				<small><i class="icon-calendar"></i> <%= time_ago_in_words comment.created_at %> ago</small>
			<% end %>	
		  </td>
	    </tr>
	<% end %>
</table>
	
<%= will_paginate @comments %>
<%= link_to "Back to #{@user.username.titleize}", user_path(@user) %>