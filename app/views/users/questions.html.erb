<% meta_title("#{@user.username} questions") %>

<h2>Questions</h2>

<table class="table">
	<% @questions.each do |question| %>
		<tr>
			<td>
			<div id="<%= question.correct == true ? 'correct-answer' : 'no-correct-answer' %>">
				<%= question.answers_count %>
			</div>
		  	</td>
		  	<td class="left">	
				<b><%= link_to question.title.titleize, question %></b><br>
				<small>Posted <%= time_ago_in_words question.created_at %> ago</small>
		  	</td>
		</tr>
	<% end %>
</table>

<%= will_paginate @questions %><br>

<%= link_to "#{@user.username.titleize} profile", user_path(@user) %>