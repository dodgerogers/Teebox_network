<% if @comment.new_record? %>
	alert("Failed to create comment: <%= j @comment.errors.full_messages.join(', ').html_safe %>");
<% else %>
var comment = $("<%= j render(@comment) %>").hide();
$('.comments-area #<%= "#{@comment.commentable_type.downcase}_#{@comment.commentable.id}" %>').append(comment);
comment.fadeIn(1000).effect('highlight', {color: '#f7f7f7'}, 1000);
$('.comment-textarea').val("");
$('.new_comment').hide();
<% end %>

