<% if @comment.new_record? %>
	alert("Failed to create comment: <%= j @comment.errors.full_messages.join(', ').html_safe %>");
<% else %>
$('#question-comments').append("<%= j render(@comment) %>").fadeIn();
$('#comment_<%="#{@comment.id}" %>').effect('highlight', {color: '#f7f7f7'}, 1200)
$('#comment-textarea').val("")
$('#new_comment').hide()
<% end %>