<% comments.each do |comment| %>
	<div class="comment-content" id='comment_<%="#{comment.id}" %>'>
		<%= comment.content %>
	</div>
	
	<div class="profile-info">
		<small>
		<%= link_to image_tag(avatar_url(comment.user)), comment.user %>
		<%= link_to comment.user.username, comment.user %><br>
		Posted <%= time_ago_in_words(comment.created_at) %> ago 
		<%= link_to "delete", [@commentable, comment], method: :delete if current_user == comment.user %></small>
		</div>
		<hr>
	<% end %>