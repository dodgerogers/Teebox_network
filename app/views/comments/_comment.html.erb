<div id='comment_<%="#{comment.id}" %>'>
	<div class="comment-content">
		<%= simple_format comment.content %>
	</div>
	
	<div class="profile-info">
		<small>
		<%= link_to image_tag(avatar_url(comment.user)), comment.user %>
		<%= link_to comment.user.username.titleize, comment.user %><br>
		Posted <%= time_ago_in_words(comment.created_at) %> ago | 
		<%= link_to "Delete", [@commentable, comment], method: :delete, remote: :true  %></small>
		</div>
		<hr>
		</div>