<div class="comment" id='comment_<%="#{comment.id}" %>'>
	<div class="comment-content">
		<%= simple_format(comment.content) %>
		<%= meta_info(comment) do %>
			<%= link_to raw("<i class='icon-remove-sign sm'></i>"), [comment.commentable, comment], method: :delete, 
				id: "delete-comment", confirm: "Are you sure? You will lose any points associated with this comment", 
				remote: :true, title: "Delete" if can? :destroy, comment %>
		<% end %>
	</div>
</div>


