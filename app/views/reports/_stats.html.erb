<table id="reports" class="table white table-condensed table-striped table-bordered">
	<thead>
		<tr>
			<td class="default emerald">New Questions</td>
			<td class="default asphalt">New Answers</td>
			<td class="default next">New Users</td>
			<td class="">Created on</td>
		</tr>
	</thead>
	<tbody>
		<% reports.each do |report| %>
		<tr>
			<td><%= report.questions %></td>
			<td><%= report.answers %></td>
			<td><%= report.users %></td>
			<td><%= report.created_at.strftime('%d/%m/%y %H:%S %p') %></td>
			<td><%= link_to raw("<i class='icon-remove-sign red'></i>"), report, method: :delete %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= will_paginate reports %>