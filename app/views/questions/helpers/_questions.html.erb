<h2><%= pluralize(questions.size, "Question") if params[:search] || params[:tag] %></h2>	

<% questions.each do |question| %>

<div class="questions">
	<%= link_to image_tag('video_screen.jpg'), question, class: "question-image"  %>
	
<div class="question-info">
	<div class="index-title">
		<%= link_to question.title.titleize, question %>
	</div>
	
	<div class="profile-info" id="index">
		<%= link_to question.votes_count, question, class: "index-vote pull-left" %>	
		
		<div class='pull-left' id="<%= question.correct == true ? 'correct-answer' : 'no-correct-answer' %>">
			<%= question.answers_count %>
		</div>
			
		<%= link_to number_to_human(question.user.reputation), question.user, id: "profile-reputation" %>
		<%= link_to image_tag(avatar_url(question.user)), question.user %>
		<small><%= link_to question.user.username.titleize, user_path(question.user) %><br>	
		Posted <%= time_ago_in_words(question.created_at) %> ago</small>
		</div>
	</div>
</div>
	<% end %>
	
<%= will_paginate questions %>