	  $('.pagination').replaceWith('<%= j render partial: "questions/questions", locals: {questions: @decorator.tagged_questions} %>');
	<% else %>
	  $('.pagination').remove();
	<% end %>
<% else  %>
	//$('#questions-index').append('<%= j render partial: "questions/questions", locals: {questions: @decorator.newest_questions} %>');
