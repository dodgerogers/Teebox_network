<div id="question-box">
<h1><%= @question.title %></h1>

<%= raw sublime_video(@question.video.file) if @question.video.present? %><br>

<%= raw youtube_url_html5(@question.youtube_url) if @question.youtube_url.present? %>

<%= simple_format @question.body %>


	<div class="form-area">
		<div class="profile-info" id="question-profile-info">
		<%= link_to image_tag(avatar_url(@question.user)), @question.user %>
		<small><%= link_to @question.user.username.titleize, user_path(@question.user) %><br>
		Posted <%= time_ago_in_words(@question.created_at) %> ago</small>
		</div>
		<% if @question.user == current_user %>
		<div class="pull-right">
	<%= link_to "Edit", edit_question_path(@question), class: "btn"  %>
	<%= link_to "Delete", question_path(@question), method: :delete,  class: "btn"  %>
	</div>
	<% end %>
	</div>
</div>	

	<%= render template: "comments/index" %>
	<%= link_to "Add comment", "#", id: "comment-button", class: "btn" %><br><br>
	<%= render partial: "comments/form" %><br>
	
	<%= render template: "answers/index" %><br>
	<a id="answer-button">Add your answer</a><br><br>
	<%= render partial: "answers/form" %>
