<h1><%= @question.title %></h1><br>

<%= find_video(@question) %><br>

<%= raw youtube_url_html5(@question.youtube_url) if @question.youtube_url.present? %><br>

<%= simple_format @question.body %>

<small>Posted by <%= link_to @question.user.email, user_path(@question.user) %></small><br>

<div class="form-actions">
	<%= link_to "Edit", edit_question_path(@question), class: "btn btn-primary" if @question.user == current_user %>
</div>