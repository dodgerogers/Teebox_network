<%= content_for :head do %>
	<title><%= @decorator.title %></title>
	<%= javascript_include_tag "sublime.js", defer: "defer" %>
<% end %>

<div class="row">
	<div class="span8">
		<div class="video-container">
			<%= sublime_video(@decorator.video) if @decorator.video.present? %>
			<% if @decorator.youtube_url.present? %>
				<br>
				<%= youtube_url_html5(@decorator.youtube_url) %>
			<% end %>	
		</div>
		<div id="question-box">
			<div class="question">
				<h1><%= @decorator.title.titleize %></h1>		
				<div class="question-content">
					<%= simple_format(@question.body) %>
				</div>
			
				<%= @decorator.question_tags %>
			
				<div class="form-area">
					<div class="profile-info" id="question-profile-info">
						<%= render partial: "votes/form", locals: { votes_count: "questions", 
																	id: @decorator.id, 
																	object: @decorator, 
																	vote_path: method(:vote_question_path) } %> 
				
					    <%= profile_link_helper(@question) %>
						<%= link_to "Edit", edit_question_path(@question) if can? :update, @question %>
						<%= link_to "Delete", @question, method: :delete, confirm: "Are you sure?" if can? :destroy, @question %>
					</div>
					<div class="social-buttons">
						<%= social_links(request.original_url) %>
					</div>
				</div>
			</div>
			<div class="comments-area">
				<div id="question_<%= @question.id %>">
					<%= render @question.comments.includes(:user) %>
				</div>
				<%= link_to "Add comment", "#", class: "comment-button" %>
				<%= render partial: "comments/form", locals: {commentable: @question} %>
			</div>
		</div>
	
		<div id='answers-count'>
			<h3><%= pluralize(@question.answers_count, "Answer")  %></h3>
		</div>
	
		<div id="question-answers">
			<%= render @answers %>
		</div>
		
		<a href="#" id="answer-button" class="default submit">Answer question</a>
		<br><br>
		<%= render partial: "answers/form", locals: { question_id: @question.id } %>
	</div>
	<div class="span4">
		<%= render partial: "shared/related_questions", locals: { questions: @decorator.related_questions } %>
	</div>
</div>