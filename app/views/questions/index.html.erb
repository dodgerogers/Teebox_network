<div class="main">
		<%= link_to "Ask a Question", new_question_path, class: "btn pull-right" %>
	</div>
	
<% @questions.each do |question| %>
	<h2><%= link_to question.title, question %></h2>
		<small>Asked by <%= link_to question.user.email %>
		on <%= time_ago_in_words(question.created_at) %> ago</small><br>
		
			<%= link_to "Delete", question_path(question), method: :delete, remote: true if question.user == current_user  %>
		
	<hr>
	<% end %>
