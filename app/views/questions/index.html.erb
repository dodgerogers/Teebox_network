<div class="main">
		<%= link_to "Ask a Question", videos_path, class: "btn ask-question" %>
	</div>
	
	<h1>Latest Questions</h1><br>
	
<% @questions.each do |question| %>

<div class="questions">
	
	<%= link_to image_tag(question_screenshot(question)), question  %>

	<h4><%= link_to question.title.titleize, question %></h4>
	
		<small><%= link_to question.user.email, user_path(question.user) %><br>
			
		Posted <%= time_ago_in_words(question.created_at) %> ago</small><br>

		</div>
	<% end %>
