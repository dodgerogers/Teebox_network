<%= render template: "shared/teebox_banner" %>

<%= render partial: "questions/helpers/tag_cloud", locals: {tags: @decorator.tags, decorator: @decorator} %>

<%= render partial: "questions/helpers/links", locals: { decorator: @decorator } %>
	
<% if params[:search] %> 
<%= render partial: "questions/helpers/questions", locals: {questions: @decorator.questions} %>
<% elsif params[:tag] %>
<%= render partial: "questions/helpers/questions", locals: {questions: @decorator.tagged_questions} %>
<% else  %>
<%= render partial: "questions/helpers/questions", locals: {questions: @decorator.newest_questions} %>
<% end %>
	