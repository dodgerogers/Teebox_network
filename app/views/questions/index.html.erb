<%= render partial: "questions/tag_cloud", locals: {tags: @decorator.tags, decorator: @decorator} %>
	
<% if params[:search] %> 
<%= render partial: "questions/questions", locals: {questions: @decorator.questions} %>
<% elsif params[:tag] %>
<%= render partial: "questions/questions", locals: {questions: @decorator.tagged_questions}%>
<% else %>
<%= render partial: "questions/tabbed_index", locals: {questions: @decorator.newest_questions, 
																											unanswered: @decorator.unanswered_questions, 
																											votes: @decorator.votes_questions} %>
<% end %>
	