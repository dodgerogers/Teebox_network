{
	"question": {
		"meta": {
			"title": "<%= meta_title(@decorator.title) %>",
			"url": "<%= question_url(@decorator) %>"
		},
		"title": "<%= @decorator.title %>",
		"views": "<%= @decorator.impressions_count %>",
		"content": "<%= @decorator.body %>",
		"tags": "<%= @decorator.tags.map(&:name).join(", ") %>",
		"user": {
			"username": "<%= @decorator.user.username %>",
			"reputation": "<%= @decorator.user.reputation %>",
			"rank": "<%= @decorator.user.rank %>",
			"member_since": "<%= time_ago_in_words @decorator.user.created_at %>"
		},
		"answers": {[
			<% @answers.each do |answer| %>
				"body": "<%= simple_format answer.body %>",
				"user": "<%= answer.user.username %>",
				"correct": "<%= answer.correct %>"
			<% end %>
		]}
	}
}